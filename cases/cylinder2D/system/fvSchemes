FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      fvSchemes;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

ddtSchemes
{
    default         backward;
}

gradSchemes
{
    default         Gauss linear;
}

divSchemes
{
    default         none;
    div(phi,U)      Gauss vanLeer;
    div(phi,k)      Gauss limitedLinear 0.1;
    div(phi,omega)  Gauss limitedLinear 0.1;
    div(phi,R)      Gauss limitedLinear 0.1;
    div(R)          Gauss linear;
    div(phi,nuTilda) Gauss limitedLinear 0.1;
    div((nuEff*dev2(T(grad(U))))) Gauss linear;
}

laplacianSchemes
{
    default         Gauss linear corrected;
}

interpolationSchemes
{
    default         linear;
}

snGradSchemes
{
    default         corrected;
}


// ************************************************************************* //
