FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      p;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 2 -2 0 0 0 0];

internalField   uniform 0;

boundaryField
{
    piston
    {
        type            zeroGradient;
    }

    baffle
    {
        type            zeroGradient;
    }

    open
    {
        type            fixedValue;
        value           uniform 0;
    }

    "(wedge1|wedge2)"
    {
        type            wedge;
    }
}

